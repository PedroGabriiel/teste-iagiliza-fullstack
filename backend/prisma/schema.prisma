// Prisma schema: modelos do banco usados pela aplicação
// - User: representa um usuário do sistema
// - Message: mensagens trocadas entre usuário e IA simulada

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique // email único, usado para login
  password  String   // hash da senha
  messages  Message[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id        String   @id @default(uuid())
  content   String   // texto da mensagem
  role      String   // 'user' ou 'ai' para distinguir remetente
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}